$cursor = new Ahc\Cli\Output\Cursor;
echo $cursor->clear();

$logo = "
    ______           _            _____       _ __     
   / ____/_  _______(_)___  ____ / ___/__  __(_) /____ 
  / /_  / / / / ___/ / __ \/ __ \\__ \/ / / / / __/ _ \
